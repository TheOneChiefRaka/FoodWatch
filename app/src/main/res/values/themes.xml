<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodWatch" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="background" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/light_background</item>
    </style>
    <style name="buttonTextColor" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/light_button_text_color</item>
    </style>
    <style name="backgroundTextColor" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/light_background_text_color</item>
    </style>

    <style name="Theme.FoodWatch" parent="Base.Theme.FoodWatch" />
    <style name="darkModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/dark_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
    <style name="notificationsSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notifications</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
    <style name="soundsSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/sounds</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
</resources>