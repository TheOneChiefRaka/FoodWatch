<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodWatch" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Common customizations go here -->
    </style>

    <!-- Light Theme -->
    <style name="Theme.FoodWatch.Light" parent="Base.Theme.FoodWatch">
        <!-- Customize your light theme here -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="background">@color/your_light_background_color</item>
        <!-- Add more attributes as needed -->
    </style>

    <!-- Dark Theme -->
    <style name="Theme.FoodWatch.Dark" parent="Base.Theme.FoodWatch">
        <!-- Customize your dark theme here -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="background">@color/your_dark_background_color</item>
        <!-- Add more attributes as needed -->
    </style>
</resources>