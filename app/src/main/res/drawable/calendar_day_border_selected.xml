<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- top border -->
    <item android:left="0dp" android:right="0dp" android:bottom="0dp" android:top="0dp"> <!-- Upper border color -->
        <shape
            android:shape="rectangle">
            <solid android:color="@color/calendar_selected_top_border"/>
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- main background -->
    <item android:left="0dp" android:right="0dp" android:bottom="0dp" android:top="3dp"> <!-- Body color -->
        <shape
            android:shape="rectangle">
            <solid android:color="@color/calendar_selected_body"/>
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>